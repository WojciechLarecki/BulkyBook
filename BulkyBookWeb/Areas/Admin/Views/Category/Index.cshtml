@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}


<div class="row mt-4 mb-4">
    <div class="col-6">
        <h2 class="text-primary">Category list</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
            <i class="bi bi-plus-circle m-1"></i>
            <span>Create new category</span>
        </a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Category name</th>
            <th scope="col">Display order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <th>
                    <a class="btn btn-primary" asp-route-id="@category.Id" asp-action="Edit">
                        <i class="bi bi-pencil-square"></i>
                        Edit
                    </a>
                    <a class="btn btn-danger" asp-route-id="@category.Id" asp-action="Delete">
                        <i class="bi bi-trash3"></i>
                        Delete
                    </a>
                </th>
            </tr>
        }
    </tbody>
</table>